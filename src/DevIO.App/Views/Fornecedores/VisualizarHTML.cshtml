@model IEnumerable<DevIO.App.ViewModels.FornecedorViewModel>
@using DevIO.App.Extensions

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">Relatório de Fornecedor</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <!-- Invoice Logo-->
                        <div class="clearfix">
                            <div class="float-left mb-3">
                                <img src="assets/images/logo-light.png" alt="" height="18">
                            </div>
                            <div class="float-right">
                                <h4 class="m-0 d-print-none">Relatório de Fornecedor</h4>
                            </div>
                        </div>

                        <!-- Invoice Detail-->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="float-left mt-3">
                                    <p><b>Registros de Fornecedores</b></p>
                                    <p class="text-muted font-13">
                                        Lorem Ipsum é simplesmente uma simulação de texto da indústria tipográfica e de impressos, e vem sendo utilizado desde o século XVI, quando um impressor desconhecido pegou uma bandeja
                                        de tipos e os embaralhou para fazer um livro de modelos de tipos. Lorem Ipsum
                                    </p>
                                </div>

                            </div><!-- end col -->

                        </div>


                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table mt-4">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                                <th>@Html.DisplayNameFor(model => model.Documento)</th>
                                                <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                                                <th>@Html.DisplayNameFor(model => model.TipoFornecedor)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @this.FormataDocumento(item.TipoFornecedor, item.Documento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Ativo)
                                                    </td>


                                                    @if (item.TipoFornecedor == 1)
                                                    {

                                                        <td><span class="badge badge-warning">Pessoa Física</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="badge badge-success">Pessoa Jurídica</span></td>
                                                    }

                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div> <!-- end table-responsive-->
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->


                        <div class="d-print-none mt-4">
                            <div class="text-right">
                                <a href="javascript:window.print()" class="btn btn-primary"><i class="mdi mdi-printer"></i> Impressão</a>
                            </div>
                        </div>
                        <!-- end buttons -->

                    </div> <!-- end card-body-->
                </div> <!-- end card -->
            </div> <!-- end col-->
        </div>
        <!-- end row -->

    </div>
    <!-- container -->


