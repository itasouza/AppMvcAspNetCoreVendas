@model IEnumerable<DevIO.App.ViewModels.FornecedorViewModel>
@using DevIO.App.Extensions

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>PDF</title>
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
</head>

<body>


    <!-- Start Content-->
    <div class="container">

        <br />

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">


                        <!-- Invoice Detail-->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="float-left mt-3">
                                    <p><b>Registros de Fornecedores</b></p>
                                    <p class="text-muted font-13">
                                        Lorem Ipsum é simplesmente uma simulação de texto da indústria tipográfica e de impressos, e vem sendo utilizado desde o século XVI, quando um impressor desconhecido pegou uma bandeja
                                        de tipos e os embaralhou para fazer um livro de modelos de tipos. Lorem Ipsum
                                    </p>
                                </div>

                            </div><!-- end col -->

                        </div>


                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table mt-4">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                                <th>@Html.DisplayNameFor(model => model.Documento)</th>
                                                <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                                                <th>@Html.DisplayNameFor(model => model.TipoFornecedor)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @this.FormataDocumento(item.TipoFornecedor, item.Documento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Ativo)
                                                    </td>


                                                    @if (item.TipoFornecedor == 1)
                                                    {

                                                        <td><span class="badge badge-warning">Pessoa Física</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="badge badge-success">Pessoa Jurídica</span></td>
                                                    }

                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div> <!-- end table-responsive-->
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->


                    </div> <!-- end card-body-->
                </div> <!-- end card -->
            </div> <!-- end col-->
        </div>
        <!-- end row -->

    </div>
    <!-- container -->



    <script src="~/assets/js/vendor.min.js"></script>
    <script src="~/assets/js/app.min.js"></script>

</body>
</html>