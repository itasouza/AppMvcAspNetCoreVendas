@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Edit";
}


<p>

</p>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card ribbon-box">
                <div class="card-body">
                    <div class="ribbon ribbon-primary float-left"><i class="mdi mdi-access-point mr-1"></i> Editar Produto</div>
                    <h5 class="text-primary float-right mt-0"></h5>
                    <div class="ribbon-content">
                        <form enctype="multipart/form-data" asp-action="Edit">


                            <!--mensagens -->
                            <vc:Summary></vc:Summary>


                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Imagem" />
                            <input type="hidden" id="IdFornecedorRetorno" asp-for="Fornecedor.Id" />


                            <div class="form-group mb-3">
                                <label asp-for="FornecedorId" class="control-label"></label>
                                <select class="form-control select2 fornecedor-selecao fornecedor-edicao" data-toggle="select2" asp-for="FornecedorId">
                                    <option></option>
                                </select>
                                <span asp-validation-for="FornecedorId" class="text-danger"></span>
                            </div>



                            <div class="form-group mb-3">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-sm-5">
                                    <div class="form-group mb-2">
                                        <label asp-for="DataValidade" class="control-label"></label>
                                        <input type="text" asp-for="DataValidade" class="form-control datepicker" data-provide="datepicker" data-date-autoclose="true" />
                                        <span asp-validation-for="DataValidade" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" asp-for="ProdutoPromocao" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">@Html.DisplayNameFor(model => model.ProdutoPromocao)</label>
                                </div>
                            </div>

                            <!--foto perfil-->

                            <div class="row">
                                <div class="col-sm-8">
                                    <!-- Profile -->
                                    <div class="card">
                                        <div class="card-body profile-user-box">

                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="media">
                                                        @if (Model.Imagem != null)
                                                        {
                                                            <span class="float-left m-2 mr-4">
                                                                <img id="imagemProduto" src="@Url.Content("~/imagensPerfil/" + Model.Imagem)"
                                                                     alt="Foto produto"
                                                                     class="rounded-circle img-thumbnail">
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="float-left m-2 mr-4">
                                                                <img id="imagemProduto" src="~/assets/images/users/avatar-foto.jpg"
                                                                     alt="Foto produto"
                                                                     class="rounded-circle img-thumbnail">
                                                            </span>
                                                        }

                                                    </div>
                                                </div> <!-- end col-->
                                            </div> <!-- end row -->

                                        </div> <!-- end card-body/ profile-user-box-->
                                    </div><!--end profile/ card -->
                                </div> <!-- end col-->
                            </div>

                            <div class="form-group mb-3">
                                <label for="fileinput">Foto do perfil</label>
                                <input asp-for="ImagemUpload" type="file" id="Imagem" class="form-control-file"
                                       placeholder="Entre uma foto" name="ImagemUpload" onchange="CarregarImagem(this)">
                            </div>

                            <!--fim de foto perfil-->

                            <div class="row">

                                <div class="col-sm-5">
                                    <label asp-for="Valor" class="control-label"></label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">R$</span>
                                        </div>
                                        <input asp-for="Valor" class="form-control campovalor" />
                                        <span asp-validation-for="Valor" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>



                            <div class="form-group mb-3">

                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" asp-for="Ativo" class="custom-control-input" id="customCheck2">
                                    <label class="custom-control-label" for="customCheck2"> @Html.DisplayNameFor(model => model.Ativo)</label>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <a class="btn btn-info" asp-action="Index">Voltar</a>
                            </div>
                        </form>

                    </div>
                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/produto.js"></script>


    <script>
         ObterDadosFornecedor();     
    </script>


}
